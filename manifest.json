{
  "name": "Hiring Cafe Watcher",
  "version": "1.1.0",
  "manifest_version": 3,
  "description": "Opens hiring.cafe, captures network responses, and emails periodic search results.",
  "permissions": ["downloads", "tabs", "scripting", "storage", "alarms"],
  "host_permissions": ["https://hiring.cafe/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "devtools_page": "devtools.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Hiring Cafe Watcher"
  }
}
